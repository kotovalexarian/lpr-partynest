<div class="container-fluid">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">
          <%= MembershipPool.human_attribute_name :id %>
        </th>
        <th scope="col">
          <%= MembershipPool.human_attribute_name :name %>
        </th>
        <th scope="col"></th>
      </tr>
    </thead>

    <tbody>
      <% @membership_pools.each do |membership_pool| %>
        <tr>
          <td scope="row"><%= membership_pool.id %></td>
          <td><%= truncate membership_pool.name %></td>
          <td>
            <% if policy(membership_pool).show? %>
              <%= link_to membership_pool_path(membership_pool),
                          role: :button, class: 'btn btn-light btn-sm' do %>
                <i class="far fa-eye"></i>
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
