<div class="container-fluid">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">
          <%= Passport.human_attribute_name :id %>
        </th>
        <th scope="col">
          <%= Passport.human_attribute_name :surname %>
        </th>
        <th scope="col">
          <%= Passport.human_attribute_name :given_name %>
        </th>
        <th scope="col">
          <%= Passport.human_attribute_name :patronymic %>
        </th>
        <th scope="col" class="d-none d-md-table-cell">
          <%= Passport.human_attribute_name :date_of_birth %>
        </th>
        <th scope="col" class="d-none d-lg-table-cell">
          <%= Passport.human_attribute_name :place_of_birth %>
        </th>
      </tr>
    </thead>

    <tbody>
      <% @passports.each do |passport| %>
        <tr>
          <td scope="row"><%= passport.id %></td>
          <td><%= truncate passport.surname, length: 15 %></td>
          <td><%= truncate passport.given_name, length: 15 %></td>
          <td><%= truncate passport.patronymic, length: 15 %></td>
          <td class="d-none d-md-table-cell">
            <%= localize passport.date_of_birth %>
          </td>
          <td class="d-none d-lg-table-cell">
            <%= truncate passport.place_of_birth, length: 15 %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
