<div class="container">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <%= link_to FederalSubject.model_name.human(count: 0),
                    federal_subjects_path %>
      </li>

      <li class="breadcrumb-item active" aria-current="page">
        <%= @federal_subject.display_name %>
      </li>
    </ol>
  </nav>

  <h1><%= @federal_subject.native_name %></h1>

  <p class="h1">
    <small class="text-muted">
      <%= @federal_subject.english_name %>
    </small>
  </p>

  <dl class="my-4">
    <dt><%= FederalSubject.human_attribute_name :number %></dt>
    <dd><%= @federal_subject.number %></dd>

    <dt><%= FederalSubject.human_attribute_name :centre %></dt>
    <dd><%= @federal_subject.centre %></dd>

    <dt><%= FederalSubject.human_attribute_name :timezone %></dt>
    <dd><%= @federal_subject.timezone %></dd>
  </dl>

  <% if @federal_subject.regional_office %>
    <hr/>

    <h2><%= RegionalOffice.model_name.human %></h2>

    <div class="row">
      <div class="col-md-4">
        <dl class="my-4">
          <dt>
            <%= RegionalOffice.human_attribute_name :current_supporters_count %>
          </dt>
          <dd><%= @federal_subject.regional_office.current_supporters_count %></dd>

          <dt><%= RegionalOffice.human_attribute_name :current_members_count %></dt>
          <dd><%= @federal_subject.regional_office.current_members_count %></dd>
        </dl>
      </div>

      <div class="col-md-4">
      </div>

      <div class="col-md-4">
      </div>
    </div>
  <% end %>
</div>
