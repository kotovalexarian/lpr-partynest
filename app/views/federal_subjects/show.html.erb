<div class="container">
  <%= nav_breadcrumb(
    [FederalSubject.model_name.human(count: 0), federal_subjects_path],
    @federal_subject.display_name,
  ) %>

  <h1><%= @federal_subject.native_name %></h1>

  <p class="h1">
    <small class="text-muted">
      <%= @federal_subject.english_name %>
    </small>
  </p>

  <dl class="my-4">
    <dt><%= FederalSubject.human_attribute_name :number %></dt>
    <dd><%= @federal_subject.number %></dd>

    <dt><%= FederalSubject.human_attribute_name :centre %></dt>
    <dd><%= @federal_subject.centre %></dd>

    <dt><%= FederalSubject.human_attribute_name :timezone %></dt>
    <dd><%= @federal_subject.timezone %></dd>
  </dl>
</div>
