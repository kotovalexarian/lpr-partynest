<%= simple_form_for account, url: settings_appearance_path do |f| %>
  <%= f.error_notification %>

  <%= f.input :timezone,
              as: :select,
              include_blank: false,
              collection: timezones_collection %>

  <%= f.input :locale,
              as: :select,
              include_blank: false,
              collection: locales_collection %>

  <%= f.button :submit, translate(:save) %>
<% end %>
